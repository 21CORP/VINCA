<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:tag="tab"
    tools:context="com.example.a21corp.vinca.MainMenu"
    android:orientation="horizontal"
    android:background="@color/colorPrimary"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.75">

        <ImageView
            android:layout_width="358dp"
            android:layout_height="91dp"
            app:srcCompat="@drawable/vincahead"
            android:id="@+id/titleImage"
            android:layout_gravity="center"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Visuelt alfabet for innovations- og lÃ¦ringsprocesser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subTitle"
                android:textAlignment="center"
                android:textStyle="normal|bold"
                android:textSize="14sp"
                android:typeface="normal"
                android:textColor="@color/primary_text_light"
                android:layout_above="@+id/newProjectButton"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="72dp" />

            <Button
                style="@style/MyButton"
                android:text="Load Project"
                android:layout_width="200dp"
                android:layout_height="wrap_content"

                android:id="@+id/loadMenuButton"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/newProjectButton"
                android:layout_marginBottom="61dp" />

            <Button
                style="@style/MyButton"
                android:text="New Project"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/newProjectButton"

                android:textAllCaps="false"
                android:layout_above="@+id/loadMenuButton"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="16dp" />

            <ImageView
                app:srcCompat="@drawable/logo"
                android:id="@+id/logoImage"
                android:layout_width="200dp"
                android:layout_gravity="center"
                android:layout_height="200dp"
                android:layout_above="@+id/subTitle"
                android:layout_alignStart="@+id/newProjectButton"
                android:layout_marginBottom="142dp" />


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
